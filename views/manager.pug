block content
  .container
    .main
      h1 Please select from the following options
      .row-fluid
        .span4
          h3
            a(href=basePath + '/main/', target='_blank')
              span.fa-stack.fa-3x
                strong.fa-stack-2x U
          h2 User view
        .span4
          h3
            a(href=basePath + '/manager/requests/', target='_blank')
              span.fa-stack.fa-3x
                strong.fa-stack-2x R
          h2 Request management
        .span4
          h3
            a(href=basePath + '/manager/cables/', target='_blank')
              span.fa-stack.fa-3x
                strong.fa-stack-2x C
          h2 Cable management
      hr.soften


block js
  script(type='text/javascript', src=basePath + '/jquery/jquery-1.9.1.js')
