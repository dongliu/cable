fieldset
  legend Basic information
  .control-group
    .control-label Project
    .controls
      select#project.input(type='text', name='basic.project', required)
        option(value='', disabled=true, selected) choose
        option(value='frib') FRIB
        option(value='rea6') ReA6
  .control-group
    .control-label WBS
    .controls
      //- .input-append
      input#wbs(type='text', name='basic.wbs', disabled=true, required)
      a#fribwbs.btn.btn-info(href='/frib/wbs', target='_blank', style='display: none;') FRIB WBS
      a#rea6wbs.btn.btn-info(href='/rea6/wbs', target='_blank', style='display: none;') ReA6 WBS
      span.help-inline
  .control-group
    .control-label Engineer
    .controls
      input#engineer(type='text', placeholder='Last, First', name='basic.engineer', required)
  .control-group
    .control-label System
    .controls
      .input-append
        select#system.input(disabled=true, name='basic.system', required)
          option(value='', disabled=true, selected) choose
        span.add-on &nbsp
      //- span.help-inline help me
  .control-group
    .control-label Subsystem
    .controls
      .input-append
        select#sub.input(disabled=true, name='basic.subsystem', required)
          option(value='', disabled=true, selected) choose
        span.add-on &nbsp
  .control-group
    .control-label Signal
    .controls
      .input-append
        select#signal.input(disabled=true, name='basic.signal', required)
          option(value='', disabled=true, selected) choose
        span.add-on &nbsp
  .control-group
    .control-label Type
    .controls
      .input-append
        input#type(type='text', name='basic.cableType')
        a.btn.btn-info(href='/cabletype', target='_blank') Browse
        a.btn.btn-info#type-details(disabled=true) Details
  .control-group
    .control-label Function
    .controls
      input#function(type='text', name='basic.service')
  .control-group
    .control-label Quantity
    .controls
      input#quantity(type='text', name='basic.quantity', class='type[number]', value=1, required)
