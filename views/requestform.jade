//- fieldset
legend Basic information
.control-group
  .control-label Project
  .controls
    select#project.input(type='text', name='basic.project', required)
      option(value='', disabled=true, selected) choose
      option(value='FRIB') FRIB
      option(value='REA6') ReA6
.control-group
  .control-label WBS
  .controls
    input#wbs(type='text', name='basic.wbs', disabled=true, required)
    a#fribwbs.btn.btn-info(href='/frib/wbs', target='_blank', style='display: none;') FRIB WBS
    a#rea6wbs.btn.btn-info(href='/rea6/wbs', target='_blank', style='display: none;') ReA6 WBS
    span.help-inline
.control-group
  .control-label Engineer
  .controls
    input#engineer(type='text', placeholder='Last, First', name='basic.engineer', required)
.control-group
  .control-label Origin category
  .controls
    .input-append
      select#cat.input(disabled=true, name='basic.originCategory', required)
        option(value='', disabled=true, selected) choose
      span.add-on &nbsp;
.control-group
  .control-label Origin subcategory
  .controls
    .input-append
      select#sub.input(disabled=true, name='basic.originSubcategory', required)
        option(value='', disabled=true, selected) choose
      span.add-on &nbsp;
.control-group
  .control-label Signal classification
  .controls
    .input-append
      select#signal.input(disabled=true, name='basic.signalClassification', required)
        option(value='', disabled=true, selected) choose
      span.add-on &nbsp;
.control-group
  .control-label Tray section
  .controls
    input#tray-section(type='text', name='basic.traySection')
.control-group
  .control-label Type
  .controls
    input#type(type='text', name='basic.cableType')
.control-group
  .control-label Function
  .controls
    input#function(type='text', name='basic.service')
.control-group
  .control-label Tags
  .controls
    input#tags(type='text', name='basic.tags', class='type[stringArray]')
    span.help-inline Seperate tags by ","
.control-group
  .control-label Quantity
  .controls
    input#quantity(type='text', name='basic.quantity', class='type[number]', value=1, required, min=1)
