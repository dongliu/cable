extends layout

block head
  meta(charset='urf-8')
  title FRIB Cable Numbering
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.css')
  link(rel='stylesheet', href='/stylesheets/style.css')

block content
  .container
    #message
    table.table-condensed
      thaed
        tr
          th System
          th Sub system
          th Signal type
          th Sequence
      tbody
        tr
          td
            select#system.input-small(disabled=true)
              option(value='', disabled=true) choose
          td
            select#sub.input-small(disabled=true)
          td
            select#signal.input-small(disabled=true)
              option(value='', disabled=true) choose
          td
            input#sequence.input-small(placeholder='######', disabled=true)
    .well
      p Decoding information
      p System: &nbsp;
        b
          span#sys-val TBD
        | &nbsp;Sub system: &nbsp;
        b
          span#sub-val TBD
        | &nbsp;Signel type: &nbsp;
        b
          span#signal-val TBD

block js
  script(type='text/javascript', src='/javascripts/jquery-1.9.1.js')
  script(type='text/javascript', src='/bootstrap/js/bootstrap.js')
  script(type='text/javascript', src='/javascripts/knockout-2.2.1.js')
  script(type='text/javascript', src='/javascripts/number.js')




