extends layout

block head
  meta(charset='utf-8')
  title #{orgName} Cable :: new cable type
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.css')
  link(rel='stylesheet', href='/stylesheets/style.css')

block content
  .container
    #message
    #modal.modal.hide.fade(tabindex='-1',role='dialog',data-backdrop='static',aria-labelledby='modalLabel',aria-hidden='true')
      .modal-header
        h3#modalLabel
      .modal-body
      .modal-footer
        button.btn.btn-primary(data-dismiss='modal',aria-hidden='true') Return to edit
    form.form-horizontal(name='cabletype')
      h3 New FRIB cable type
      //- fieldset
      legend Naming
      .control-group
        .control-label Conductor number
        .controls
          input#conductor-number(type='number', name='conductorNumber', min=1, required)
      .control-group
        .control-label Conductor size
        .controls
          input#conductor-size(type='text', name='conductorSize', required)
      .control-group
        .control-label Type
        .controls
          select#frib-type.input(name='fribType')
            option 7-Pole
            option Multi
            option PwrAC
            option PwrDC
            option ArmPwrDC
            option Coax
            option Hardline
            option RigidLine
            option Cat6
            option TCtypeJ
            option TCtypeK
            option Sfib
            option SMfiber
            option MMfiber
            option PMMfiberRAD
            option Triax
      .control-group
        .control-label Type number
        .controls
          input#type-number(type='text', placeholder='NNN', name='typeNumber', minlength=3, maxlength=3, required)
      .control-group
        .control-label New type name
        .controls
          input#name(name='newName', type='text', disabled)
          span.help-inline Generated from the above inputs
      legend Details
      .control-group
        .control-label Function/Service
        .controls
          input#service(type='text', name='service')
      .control-group
        .control-label Pairing
        .controls
          select#pairing.input(name='pairing')
            option N/A
            option unpaired
            option twisted pair
            option triad
      .control-group
        .control-label Shielding
        .controls
          select#shielding.input(name='shielding')
            option N/A
            option unshielded
            option overall shielded
            option individually shielded pairs
            option double-braided shield
            option single shielded (braid)
            option double shielded (braid)
            option overall shielded (foil) + TC braid
      .control-group
        .control-label O.D. (max)
        .controls
          input#outer-diameter(type='text', name='outerDiameter')
      .control-group
        .control-label Valtage rating (V)
        .controls
          input#voltage-rating(type='text', name='voltageRating')
      .control-group
        .control-label Raceway
        .controls
          select#raceway.input(name='raceway')
            option N/A
            option Cable Tray, Conduit
      .control-group
        .control-label Tunnel/HotCell usage
        .controls
          label.checkbox
            input(type='checkbox', name='tunnelHotcell')
      .control-group
        .control-label Manufacturer
        .controls
          input#manufacturer(type='text', name='manufacturer')
      .control-group
        .control-label Part number
        .controls
          input#partNumber(type='text', name='partNumber')
      .control-group
        .control-label Other requirements
        .controls
          textarea(name='otherRequirements')
      .form-actions
        .btn-group
          button.btn.btn-primary#submit(type='submit', name='action') Submit
        .btn-group
          button.btn.btn-warning#reset(type='reset', name='reset') Reset



block js
  script(type='text/javascript', src='/jquery/jquery-1.9.1.js')
  script(type='text/javascript', src='/bootstrap/js/bootstrap.js')
  script(type='text/javascript', src='/jquery/jquery.validate.js')
  script(type='text/javascript', src='/dependencies/binder.js')
  script(type='text/javascript', src='/javascripts/new-cable-type.js')
