extends layout

block head
  meta(charset='urf-8')
  title FRIB Cable user management
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.css')
  link(rel='stylesheet', href='/datatables/css/dataTables.bootstrap.css')
  link(rel='stylesheet', href='/ui-lightness/jquery-ui-1.10.2.custom.css')
  link(rel='stylesheet', href='/stylesheets/style.css')

block content
  .container(style="margin-top: 10px")
    #message
    table#users.table.table-bordered.table-hover
    #user-details
      #ad-details
      form.form-horizontal(name='user')
        //- .control-group
        //-   .control-label User name
        //-   .controls
        //-     input.input-large#name(type='text', placeholder='Last, First')
        .control-group
          .control-label Privileges
          .controls
            label.checkbox.inline
              input#adjust(type='checkbox')
              | adjust
            label.checkbox.inline
              input#approve(type='checkbox')
              | approve
            label.checkbox.inline
              input#install(type='checkbox')
              | install
            label.checkbox.inline
              input#qa(type='checkbox')
              | QA
            label.checkbox.inline
              input#admin(type='checkbox')
              | admin
        .form-actions
          .btn-group
            button.btn.btn-primary#update(type='submit') Update
          .btn-group
            button.btn.btn#cancle(type='button') Cancle

block js
  script(type='text/javascript', src='/javascripts/jquery-1.9.1.js')
  script(type='text/javascript', src='/javascripts/jquery-ui-1.10.2.custom.js')
  script(type='text/javascript', src='/datatables/js/jquery.dataTables.js')
  script(type='text/javascript', src='/bootstrap/js/bootstrap.js')
  script(type='text/javascript', src='/datatables/js/ZeroClipboard.js')
  script(type='text/javascript', src='/datatables/js/TableTools.js')
  script(type='text/javascript', src='/datatables/js/dataTables.bootstrap.js')
  script(type='text/javascript', src='/javascripts/nod.js')
  script(type='text/javascript', src='/javascripts/moment.js')
  script(type='text/javascript', src='/javascripts/util.js')
  script(type='text/javascript', src='/javascripts/user.js')