extends layout

block head
  meta(charset='urf-8')
  title FRIB Cable App
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.css')
  link(rel='stylesheet', href='/stylesheets/style.css')

block content
  .container
    .btn-toolbar
      .btn-group
        a.btn.btn-primary#new(href='./requestform', target='_blank') New Request
      .btn-group.dropdown
        a#meta.btn.dropdown-toggle(data-toggle='dropdown') Meta
          span.caret
        ul.dropdown-menu
          li#numbering
            a(href='./numbering') FRIB cable numbering
          li#add-text
            a(href='./cabletype', target='_blank') FRIB approved cable types
          li#add-par
            a(href='#') Other
      .btn-group
        a.btn(href='#users') Users
      .btn-group
        a.btn.btn-info(href='./about') About

    .tabbable.tabs-left#tabs
      ul.nav.nav-tabs
        li.active
          a(href='#requested', data-toggle='tab') Requested
        li
          a(href='#adjusted', data-toggle='tab') Adjusted
        li
          a(href='#approved', data-toggle='tab') Approved
        li
          a(href='#installed', data-toggle='tab') Installed
        li
          a(href='#working', data-toggle='tab') Working
      .tab-content
        #requested.tab-pane.active
          p the list of requested cables
        #adjusted.tab-pane
          p the list of adjusted cables
        #approved.tab-pane
          p the list of approved cables
        #installed.tab-pane
          p the list of installed cables
        #working.tab-pane
          p the list of working cables
    //- #requestform(style='display: none;')
    //-   include requestform

block js
  script(type='text/javascript', src='/javascripts/jquery-1.9.1.js')
  script(type='text/javascript', src='/bootstrap/js/bootstrap.js')
  script(type='text/javascript', src='/javascripts/cable.js')

