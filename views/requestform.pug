//- fieldset
legend Basic information
.control-group
  .control-label Project
  .controls
    select.input#project(type='text', name='basic.project', required)
      option(value='', disabled=true, selected) choose
      option(value='FRIB') FRIB
      option(value='REA') ReA
      option(value='SECAR') SECAR
      option(value='BECOLA') BECOLA
      option(value='SRFHB') SRF HB
      option(value='BUSINESS') Business
.control-group
  .control-label WBS
  .controls
    input#wbs(type='text', name='basic.wbs', required)
.control-group
  .control-label Engineer
  .controls
    input#engineer(type='text', placeholder='Last, First', name='basic.engineer', required)
.control-group
  .control-label Origin category
  .controls
    .input-append
      select.input#cat(disabled=true, name='basic.originCategory', required)
        option(value='', disabled=true, selected) choose
      span.add-on &nbsp;
.control-group
  .control-label Origin subcategory
  .controls
    .input-append
      select.input#sub(disabled=true, name='basic.originSubcategory', required)
        option(value='', disabled=true, selected) choose
      span.add-on &nbsp;
.control-group
  .control-label Signal classification
  .controls
    .input-append
      select.input#signal(disabled=true, name='basic.signalClassification', required)
        option(value='', disabled=true, selected) choose
      span.add-on &nbsp;
.control-group
  .control-label Tray section
  .controls
    select.input#tray-section(name='basic.traySection')
      option HPRF
      option DC
      option VLLS
      option LLS
      option HVDC
      option MLS
      option AC
      option MV-AC
      option REF
      option PPS
      option N/A
.control-group
  .control-label Type
  .controls
    input#type(type='text', name='basic.cableType')
.control-group
  .control-label Function
  .controls
    input#function(type='text', name='basic.service')
.control-group
  .control-label Tags
  .controls
    input#tags(type='text', name='basic.tags', class=type[stringArray])
    span.help-inline Seperate tags by ","
.control-group
  .control-label Quantity
  .controls
    input#quantity(type='text', name='basic.quantity', class=type[number], value=1, required, min=1)
.control-group
  .control-label Owner provided
  .controls
    select.input#ownerProvided(type='boolean', name='ownerProvided')
      option(value='false') No
      option(value='true') Yes
