extends layout.pug

block head
  meta(charset='urf-8')
  title FRIB Cable App
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.css')
  link(rel='stylesheet', href='/datatables/css/dataTables.bootstrap.css')
  link(rel='stylesheet', href='/ui-lightness/jquery-ui-1.10.2.custom.css')
  link(rel='stylesheet', href='/font-awesome-4.2.0/css/font-awesome.css')
  link(rel='stylesheet', href='/stylesheets/style.css')

block content
  .container-fluid
    .btn-toolbar
      .btn-group
        button.btn.btn-primary#reload(type='button')
          i.fa.fa-refresh.fa-lg
          | &nbsp;Reload
      .btn-group.dropdown
        a.btn.dropdown-toggle#meta(data-toggle='dropdown')
          i.fa.fa-gears.fa-lg
          | &nbsp;Meta
          span.caret
        ul.dropdown-menu
          li#cabletypes
            a(href='/cabletypes/', target='_blank') FRIB approved cable types
          li#wbs
            a(href='/frib/wbs', target='_blank') FRIB work breakdown structure
          li#wbs
            a(href='/rea6/wbs', target='_blank') ReA 6 work breakdown structure
      .btn-group
        button.btn.btn-primary#bar(type='button')
          i.fa.fa-bar-chart.fa-lg
          | &nbsp;Bar chart
      .btn-group
        a.btn.btn-info(href='/manager/cables', target='_blank')
          i.fa.fa-briefcase.fa-lg
          | &nbsp;Manage cables
      .btn-group
        a.btn.btn-info(href='/main', target='_blank')
          i.fa.fa-user.fa-lg
          | &nbsp;User view
      .btn-group
        a.btn.btn-info(href='/allcables', target='_blank')
          i.fa.fa-institution.fa-lg
          | &nbsp;All cables
      if (roles.indexOf('admin') !== -1)
        .btn-group
          a.btn.btn-primary(href='/users', target='_blank')
            i.fa.fa-users.fa-lg
            | &nbsp;Users
      .btn-group
        a.btn.btn-info(href='/about', target='_blank')
          i.fa.fa-info.fa-lg
          | &nbsp;About
    #message
    .modal.hide.fade#modal(tabindex='-1', role='dialog', data-backdrop='static', aria-labelledby='modalLabel', aria-hidden='true')
      .modal-header
        h3#modalLabel
      .modal-body
      .modal-footer
    .tabbable.tabs-left#tabs
      ul.nav.nav-tabs
        li.active
          a(href='#approving', data-toggle='tab') Requests to approve
        li
          a(href='#rejected', data-toggle='tab') Rejected requests
        li
          a(href='#approved', data-toggle='tab') Approved requests
      .tab-content
        .tab-pane.active#approving
          .btn-toolbar
            .btn-group
              button.btn.btn-primary#approving-approve(type='button')
                i.fa.fa-check-square-o.fa-lg
                | &nbsp;Approve
            .btn-group
              button.btn.btn-primary#approving-reject(type='button')
                i.fa.fa-exclamation-circle.fa-lg
                | &nbsp;Reject
            .btn-group
              button.btn.btn-info#approving-select-all(type='button', data-toggle='tooltip', title='select all the items in the table no matter visiable or not')
                i.fa.fa-list.fa-lg
                | &nbsp;Select all
            .btn-group
              button.btn.btn-info#approving-select-none(type='button')
                i.fa.fa-square-o.fa-lg
                | &nbsp;Clear selection
            .btn-group(data-toggle='buttons-radio')
              button.btn.btn-info.active#approving-wrap(type='button') Wrap
              button.btn.btn-info#approving-unwrap(type='button') Unwrap
          .table-overflow
            table.table.table-bordered.table-hover.table-condensed#approving-table
        .tab-pane#rejected
          .btn-toolbar
            .btn-group(data-toggle='buttons-radio')
              button.btn.btn-info.active#rejected-wrap(type='button') Wrap
              button.btn.btn-info#rejected-unwrap(type='button') Unwrap
          .table-overflow
            table.table.table-bordered.table-hover.table-condensed#rejected-table
        .tab-pane#approved
          .btn-toolbar
            .btn-group(data-toggle='buttons-radio')
              button.btn.btn-info.active#approved-wrap(type='button') Wrap
              button.btn.btn-info#approved-unwrap(type='button') Unwrap
          .table-overflow
            table.table.table-bordered.table-hover.table-condensed#approved-table

block js
  script(type='text/javascript', src='/jquery/jquery-1.9.1.js')
  script(type='text/javascript', src='/datatables/js/jquery.dataTables.js')
  script(type='text/javascript', src='/bootstrap/js/bootstrap.js')
  script(type='text/javascript', src='/datatables/js/ZeroClipboard.js')
  script(type='text/javascript', src='/datatables/js/TableTools.js')
  script(type='text/javascript', src='/datatables/js/dataTables.bootstrap.js')
  script(type='text/javascript', src='/dependencies/moment.js')
  script(type='text/javascript', src='/dependencies/lodash.js')
  script(type='text/javascript', src='/javascripts/table.js')
  script(type='text/javascript', src='/javascripts/util.js')
  script(type='text/javascript', src='/javascripts/ajaxhelper.js')
  script(type='text/javascript', src='/dependencies/Chart.js')
  script(type='text/javascript', src='/javascripts/barchart.js')
  script(type='text/javascript', src='/javascripts/manage-requests.js')


