extends layout

block head
  meta(charset='urf-8')
  title FRIB Cable types
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.css')
  link(rel='stylesheet', href='/datatables/css/dataTables.bootstrap.css')
  link(rel='stylesheet', href='/font-awesome-4.2.0/css/font-awesome.css')
  link(rel='stylesheet', href='/stylesheets/style.css')

block content
  .container-fluid(style="margin-top: 10px")
    #message
    .btn-toolbar
      .btn-group
        button.btn.btn-primary#add
          i.fa.fa-file-o.fa-lg
          | &nbsp;Add a new type
      .btn-group
        .btn-group
          a.btn.btn-info(href='/cabletypes')
            i.fa.fa-sign-out.fa-lg
            | &nbsp;Back to read only
    table#cable-type.table.table-bordered.table-hover

block js
  script(type='text/javascript', src='/jquery/jquery-1.9.1.js')
  script(type='text/javascript', src='/datatables/js/jquery.dataTables.js')
  script(type='text/javascript', src='/bootstrap/js/bootstrap.js')
  script(type='text/javascript', src='/datatables/js/ZeroClipboard.js')
  script(type='text/javascript', src='/datatables/js/TableTools.js')
  script(type='text/javascript', src='/datatables/js/dataTables.bootstrap.js')
  script(type='text/javascript', src='/javascripts/jquery.jeditable.js')
  script(type='text/javascript', src='/javascripts/table.js')
  script(type='text/javascript', src='/javascripts/cable-type-manage.js')
