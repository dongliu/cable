extends layout

block head
  meta(charset='urf-8')
  title FRIB Cables
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.css')
  link(rel='stylesheet', href='/datatables/css/dataTables.bootstrap.css')
  link(rel='stylesheet', href='/font-awesome-4.2.0/css/font-awesome.css')
  link(rel='stylesheet', href='/stylesheets/style.css')

block content
  .container-fluid(style="margin-top: 10px")
    #message
    table#all-cable.table.table-bordered.table-hover
      .btn-toolbar
        .btn-group
          button.btn.btn-primary#reload
            i.fa.fa-refresh.fa-lg
            | &nbsp;Reload
        .btn-group
          button.btn.btn-info#all-select-all
            i.fa.fa-list.fa-lg
            | &nbsp;Select all in current view
        .btn-group
          button.btn.btn-info#all-select-none
            i.fa.fa-square-o.fa-lg
            | &nbsp;Clear selection
        .btn-group(data-toggle='buttons-radio')
          button.btn.btn-info#all-wrap.active Wrap
          button.btn.btn-info#all-unwrap Unwrap
        #all-show.btn-group
          button.btn.btn-info.dropdown-toggle(data-toggle='dropdown')
            i.fa.fa-wrench.fa-lg
            | &nbsp;Show
            span.caret
          ul.dropdown-menu
            li
              label.checkbox
                input(type='checkbox', value='from', checked)
                | from
            li
              label.checkbox
                input(type='checkbox', value='to', checked)
                | to
            li
              label.checkbox
                input(type='checkbox', value='comments', checked)
                | comments

block js
  script(type='text/javascript', src='/jquery/jquery-1.9.1.js')
  script(type='text/javascript', src='/datatables/js/jquery.dataTables.js')
  script(type='text/javascript', src='/bootstrap/js/bootstrap.js')
  script(type='text/javascript', src='/datatables/js/ZeroClipboard.js')
  script(type='text/javascript', src='/datatables/js/TableTools.js')
  script(type='text/javascript', src='/datatables/js/dataTables.bootstrap.js')
  script(type='text/javascript', src='/dependencies/moment.js')
  script(type='text/javascript', src='/javascripts/table.js')
  script(type='text/javascript', src='/javascripts/allCable.js')
